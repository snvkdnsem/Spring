	<bean id="hyundaimaker" class="com.example.demo.ioc.step5.HyundaiMaker"></bean>
	<bean id="manager" class="com.example.demo.ioc.step5.OrderManager">
	<!-- property의 name은 setMaker로 받아온다 -->
